{
  "name": "freedomhood",
  "version": "0.0.3",
  "description": "Source code of Freedomhood website.",
  "keywords": [
    "hugo-site",
    "nodejs",
    "threejs"
  ],
  "homepage": "https://github.com/matteobertoldo/freedomhood#readme",
  "main": "webpack.config.js",
  "author": {
    "name": "Matteo Bertoldo",
    "email": "mrbert93@gmail.com",
    "url": "https://github.com/matteobertoldo"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matteobertoldo/freedomhood/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://matteobertoldo@github.com/matteobertoldo/freedomhood.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@prettier/plugin-xml": "^0.12.0",
    "autoprefixer": "^10.0.1",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.0",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "esbuild-loader": "^2.4.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fibers": "^5.0.0",
    "git-branch-is": "^4.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "mini-css-extract-plugin": "^1.0.0",
    "node-sass": "^4.14.1",
    "postcss": "^8.1.1",
    "postcss-loader": "^4.0.4",
    "postcss-pxtorem": "^5.1.1",
    "prettier": "^2.1.2",
    "remark-cli": "^9.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0",
    "webpack-fix-style-only-entries": "^0.6.0"
  },
  "dependencies": {
    "sanitize.css": "^12.0.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "git-branch-is --not master && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,scss,svg}": "prettier --write",
    "*.js": "eslint --fix",
    "*.md": "remark .",
    "*.scss": "stylelint --fix"
  },
  "scripts": {
    "browserlist": "npx browserslist",
    "build": "webpack && hugo",
    "build:production": "webpack --env production && hugo --environment production",
    "format": "prettier --config .prettierrc --write \"./**/*.{md,js,json,scss,svg}\"",
    "lint": "npm run lint:js && npm run lint:markdown && npm run lint:scss",
    "lint:js": "eslint .",
    "lint:markdown": "remark .",
    "lint:scss": "stylelint ./src/scss/**/*",
    "parse": "npm run format && npm run lint",
    "serve": "hugo server --bind \"0.0.0.0\"",
    "watch": "webpack --watch"
  }
}
