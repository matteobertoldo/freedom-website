{
  "name": "freedomhood",
  "version": "0.0.4",
  "description": "Source code of Freedomhood website.",
  "keywords": [
    "hugo-site",
    "nodejs",
    "threejs"
  ],
  "homepage": "https://github.com/matteobertoldo/freedomhood#readme",
  "main": "webpack.config.js",
  "author": {
    "name": "Matteo Bertoldo",
    "email": "mrbert93@gmail.com",
    "url": "https://github.com/matteobertoldo"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matteobertoldo/freedomhood/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://matteobertoldo@github.com/matteobertoldo/freedomhood.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@prettier/plugin-xml": "^0.12.0",
    "autoprefixer": "^10.0.1",
    "clean-terminal-webpack-plugin": "^3.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "depcheck": "^1.2.0",
    "esbuild-loader": "^2.4.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "fast-glob": "^3.2.4",
    "fibers": "^5.0.0",
    "git-branch-is": "^4.0.0",
    "htmlhint": "^0.14.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "mini-css-extract-plugin": "^1.3.0",
    "node-sass": "^5.0.0",
    "postcss": "^8.1.6",
    "postcss-loader": "^4.0.4",
    "postcss-pxtorem": "^5.1.1",
    "prettier": "^2.1.2",
    "prettier-plugin-sh": "^0.6.0",
    "remark-cli": "^9.0.0",
    "remark-lint-no-dead-urls": "^1.1.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.29.0",
    "sass-loader": "^10.0.5",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-no-unsupported-browser-features": "^4.1.4",
    "stylelint-scss": "^3.18.0",
    "stylelint-webpack-plugin": "^2.1.1",
    "svg-spritemap-webpack-plugin": "^3.7.1",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-remove-empty-scripts": "^0.6.3",
    "webpack-shell-plugin-next": "^2.0.4"
  },
  "dependencies": {
    "sanitize.css": "^12.0.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "git-branch-is --not master && lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,js,json,scss,sh,svg,xml,yml}": "prettier --write",
    "*.html": "htmlhint",
    "*.js": "eslint",
    "*.md": "remark --silently-ignore",
    "*.scss": "stylelint"
  },
  "scripts": {
    "browserlist": "npx browserslist",
    "build": "npm run clean && webpack && hugo",
    "build:production": "npm run clean && webpack --env production && hugo -e production",
    "clean": "npx rimraf public/*",
    "format": "prettier --config .prettierrc --write \"./**/*.{md,js,json,scss,sh,svg,xml,yml}\"",
    "lint": "npm run lint:html && npm run lint:js && npm run lint:markdown && npm run lint:scss",
    "lint:html": "npx htmlhint \"./src/templates/**/*.html\"",
    "lint:js": "eslint .",
    "lint:markdown": "remark .",
    "lint:scss": "stylelint ./src/scss/",
    "parse": "npm run format && npm run lint",
    "parse:packages": "npx depcheck ./",
    "serve": "npm run clean && webpack --watch"
  }
}
