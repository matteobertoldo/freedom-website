{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "webextensions": true
  },
  "extends": ["plugin:prettier/recommended", "standard"],
  "rules": {
    "global-require": "error",
    "import/extensions": ["error", "never"],
    "indent": ["error", 2],
    "no-console": "error",
    "no-var": "error",
    "semi": ["error", "always"],
    "space-before-function-paren": 0
  }
}
